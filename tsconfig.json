{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "./api",
    "strict": true,
    "skipLibCheck": true,
    "checkJs": false
  },
  "include": ["src/**/*.ts", "api/index.ts"],
  "exclude": ["node_modules"]
}
